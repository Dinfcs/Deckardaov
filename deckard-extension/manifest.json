{
  "name": "DeckardScript",
  "version": "1.0",
  "description": "Descarga y ejecuta scripts en páginas específicas.",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "clipboardRead",
    "clipboardWrite",
    "downloads",
    "activeTab",
    "notifications",
    "contextMenus",
    "alarms",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
"host_permissions": [
  "<all_urls>"
],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
